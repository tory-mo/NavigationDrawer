<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="NavigationMenuSubheaderStyle">
        <item name="android:textSize">@dimen/nav_textSize</item>
        <item name="android:textColor">@color/nav_textColor</item>
        <item name="android:alpha">0.54</item>
        <item name="android:paddingLeft">@dimen/nav_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationMenuItemStyle">
        <item name="android:textSize">@dimen/nav_textSize</item>
        <item name="android:textColor">@color/nav_textColor</item>
        <item name="android:alpha">0.87</item>
        <item name="android:paddingLeft">@dimen/nav_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationIconStyle">
        <item name="android:paddingLeft">@dimen/nav_margin</item>
        <item name="android:paddingRight">@dimen/nav_margin</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

</resources>
